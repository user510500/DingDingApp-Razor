@{
    ViewData["Title"] = "登录";
}

<div class="text-center">
    <h1 class="display-4">钉钉扫码登录</h1>
    <p>请使用钉钉APP扫描下方二维码进行登录</p>
    
    @if (ViewBag.QrCodeUrl != null)
    {
        <div class="mt-4">
            <img src="@ViewBag.QrCodeUrl" alt="二维码" style="max-width: 300px;" />
        </div>
        <div class="mt-3">
            <p class="text-muted">或点击下方链接进行登录</p>
            <a href="@ViewBag.QrCodeUrl" target="_blank" class="btn btn-primary">打开登录页面</a>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <p>无法生成登录二维码，请检查钉钉配置</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // 每5秒检查一次登录状态
        setInterval(function() {
            fetch('@Url.Action("Index", "Home")')
                .then(response => {
                    if (response.redirected) {
                        window.location.href = response.url;
                    }
                });
        }, 5000);
    </script>
}

