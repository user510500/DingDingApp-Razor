@{
    ViewData["Title"] = "登录";
}

<div class="text-center">
    <h1 class="display-4">钉钉扫码登录</h1>
    <p>请使用钉钉APP扫描下方二维码进行登录</p>
    
    @if (ViewBag.QrCodeUrl != null)
    {
        <div class="mt-4">
            <img src="@ViewBag.QrCodeUrl" alt="二维码" style="max-width: 300px;" />
        </div>
        <div class="mt-3">
            <p class="text-muted">或点击下方链接进行登录</p>
            <a href="@ViewBag.QrCodeUrl" target="_blank" class="btn btn-primary">打开登录页面</a>
        </div>
    }
    else if (ViewBag.Error != null)
    {
        <div class="alert alert-warning">
            <p>@ViewBag.Error</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // 每5秒检查一次登录状态
        setInterval(function() {
            fetch('/api/auth/status')
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.data && data.data.isLoggedIn) {
                        window.location.href = '/User';
                    }
                });
        }, 5000);
    </script>
}

