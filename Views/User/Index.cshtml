@model List<DingDingApp.Models.User>
@{
    ViewData["Title"] = "人员管理";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>人员列表</h2>
    <a asp-action="Create" class="btn btn-primary">新增人员</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>用户ID</th>
                <th>姓名</th>
                <th>手机号</th>
                <th>邮箱</th>
                <th>部门</th>
                <th>职位</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserId</td>
                    <td>@user.Name</td>
                    <td>@user.Mobile</td>
                    <td>@user.Email</td>
                    <td>@user.Department</td>
                    <td>@user.Position</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">详情</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">编辑</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">删除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

